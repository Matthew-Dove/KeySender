    <div id="upper" onclick="javascript: window.sendKey(this.innerHTML);">F10</div>
    <div id="middle">&nbsp;</div>
    <div id="lower" onclick="javascript: window.sendKey(this.innerHTML);">F11</div>
</div>
<div id="middleCircle"></div>

@section css {
